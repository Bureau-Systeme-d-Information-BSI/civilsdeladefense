= simple_form_for([:account, @job_application, email], html: { class: 'fr-box fr-mb-5w fr-pb-5w' }, html: {data: {controller: "files-upload"}}) do |f|
  %strong.d-block.fr-mb-2w= t('.title')
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :subject
    = f.input :body
    = f.file_field :attachments, multiple: true, data: {action: "change->files-upload#changed change->fr-tab-management#resize", files_upload_target: "input"}, class: "d-none"
  = link_to t('.add_attachment'), "#", data: {action: "click->files-upload#add"}
  %ul{data: {files_upload_target: "files"}}

  .fr-input-group.fr-grid-row.justify-content-end.fr-mt-3w
    = button_tag(type: 'submit', class: 'fr-btn', data: {action: "click->files-upload#setFilesToUpload"}) do
      = t('buttons.send')
