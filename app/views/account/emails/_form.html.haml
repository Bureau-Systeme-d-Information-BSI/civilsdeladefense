= simple_form_for([:account, @job_application, email], html: { class: 'fr-box fr-mb-5w fr-pb-5w' }) do |f|
  %strong.d-block.fr-mb-2w= t('.title')
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :subject
    = f.input :body

  .fr-input-group.fr-grid-row.justify-content-end.fr-mt-3w
    = button_tag(type: 'submit', class: 'fr-btn') do
      = t('buttons.send')
