%h2.fr-h3= t('.title')
= simple_form_for(@user_for_password_change, url: [:update_password, :account, :user], method: :patch, html: { class: 'fr-box fr-mb-5w fr-pb-5w' }) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :current_password, placeholder: false
    = f.input :password, placeholder: false
    = f.input :password_confirmation, placeholder: false
  .fr-input-group.fr-grid-row.justify-content-end.fr-mt-3w
    = button_tag(type: 'submit', class: 'fr-btn') do
      = t('buttons.save')
