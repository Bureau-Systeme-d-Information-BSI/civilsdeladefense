.fr-container
  .fr-grid-row
    .fr-col-12
      %h2.fr-h3= t('.title')
      .fr-box.fr-mb-5w.fr-pb-5w
        = simple_form_for(@user, url: [:account, :user], method: :patch) do |f|
          = f.error_notification
          .form-inputs
            = f.input :first_name
            = f.input :last_name
            = f.input :current_position
            = f.input :phone
            = f.input :website_url
            = render partial: '/department_users/form', locals: { user_form: f, kind: :user }
            = f.input :photo
            - if @user.photo.present?
              = f.input :delete_photo, as: :boolean
              = image_user_tag(@user.photo, class: 'avatar-xl')
          .fr-input-group.fr-grid-row.justify-content-end.fr-mt-3w
            = f.button :submit, t('buttons.save'), class: 'fr-btn'
