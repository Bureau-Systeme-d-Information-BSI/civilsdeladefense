.card
  .card-header
    .card-title= t('.title')
  .card-body
    = simple_form_for(@administrator, url: [:admin, :account]) do |f|
      - debugger
      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      .form-inputs
        = f.input :title, placeholder: false
        .row
          .col-12.col-md-6
            = f.input :first_name
          .col-12.col-md-6
            = f.input :last_name
        = f.label :photo
        = f.input :photo, label: t('buttons.choose_file'), wrapper: :custom_file_without_label
      .form-actions.text-right.mt-4
        %ul.list-inline.mb-0
          %li.list-inline-item
            = button_tag(type: 'submit', class: 'btn btn-primary btn-raised mb-0') do
              = t('buttons.save')
              = fa_icon('send', class: 'ml-1')
