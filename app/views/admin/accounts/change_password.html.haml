.card
  .card-header
    .card-title= t('.title')
  .card-body
    = simple_form_for(@administrator, url: [:update_password, :admin, :account]) do |f|
      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      .form-inputs
        = f.input :current_password, placeholder: false
        = f.input :password, placeholder: false
        = f.input :password_confirmation, placeholder: false
      .form-actions.text-right.mt-4
        %ul.list-inline.mb-0
          %li.list-inline-item
            = button_tag(type: 'submit', class: 'btn btn-primary btn-raised mb-0') do
              = t('buttons.save')
              = fa_icon('paper-plane', class: 'ml-1')
