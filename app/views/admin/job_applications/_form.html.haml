-# frozen_string_literal: true
= simple_form_for([:admin, @job_application]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :job_offer
    = f.association :user
    = f.simple_fields_for :personal_profile do |profile_form|
      = profile_form.input :current_position
      = profile_form.input :phone
      = profile_form.input :address_1
      = profile_form.input :address_2
      = profile_form.input :postcode
      = profile_form.input :city
      = profile_form.input :country
      = profile_form.input :website_url

  .form-actions
    = f.button :submit
