.row.bg-card-bg
  .col-12.col-md-8.border-right
    .tab-content
      .tab-pane.fade.show.active#job-application{role: :tabpanel, aria: {labelledby: :'job-application'}}
        - files = JobOffer::FILES.dup
        - files.delete(:photo)
        - files.each do |file|
          - if @job_application.send(file).attached?
            .card.mt-3
              .card-header.with-subheader.bg-white.font-weight-bold.text-secondary
                = fa_icon('file-document', class: 'text-secondary')
                = t("simple_form.labels.job_application.#{file}")
              .card-subheader.bg-secondary
              .card-body.bg-body-bg
                - pdf_url = url_for @job_application.send(file)
                %embed{src: pdf_url, type: "application/pdf", width: "100%", height: "400px"}
      .tab-pane.fade#emails{role: :tabpanel, aria: {labelledby: :emails}}
        Ici les emails
      .tab-pane.fade#files{role: :tabpanel, aria: {labelledby: :files}}
        Ici les fichiers

  .col-12.col-md-4.py-2
    .font-weight-bold.text-secondary
      = fa_icon('forum', class: 'text-secondary')
      = t(".activity")
