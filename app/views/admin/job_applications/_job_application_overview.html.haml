- files = JobOffer::FILES.dup
- files.delete(:photo)
- files.each do |file|
  - if job_application.send(file).attached?
    .card
      .card-header.with-subheader.bg-white.font-weight-bold.text-secondary
        = fa_icon('file-document', class: 'text-secondary')
        = t("simple_form.labels.job_application.#{file}")
      .card-subheader.bg-secondary
      .card-body.bg-body-bg
        - pdf_url = url_for job_application.send(file)
        %embed{src: pdf_url, type: "application/pdf", width: "100%", height: "400px"}
