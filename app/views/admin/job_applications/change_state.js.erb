Snackbar.show({text: '<%= @notification %>', showAction: false})
var nodeBoard = document.querySelector('#board')
if (nodeBoard !== null) {
  window.boardRedraw()
  <%- if @job_application.rejected? %>
  var url = '<%= url_for([:emails, :admin, @job_offer, @job_application]) %>'
  window.boardShowRejectionModal(url)
  <%- end %>
} else {
  window.reloadWithTurbolinks()
}
