-# frozen_string_literal: true
.container-fluid
  .row
    %aside.col-md-2.d-none.d-md-block.bg-white.sidebar
      .sidebar-sticky
        .list-group.stepper
          - steps = [@page_title, t('.card_2_title'), t('.card_3_title')]
          - steps.each_with_index do |step, index|
            - space, number, title = step.split /(\d)\.\s/
            - klasses = %w(list-group-item d-flex justify-content-between align-items-center)
            - klasses << 'active' if index == 0
            = link_to "#step_#{index+1}", class: klasses do
              = title
              %span.badge.badge-pill= number
    %main.col-md-9.ml-sm-auto.col-lg-10{role: 'main'}
      = simple_form_for([:admin, @job_offer]) do |f|
        = f.error_notification
        = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

        %nav.navbar.navbar-dark.bg-secondary.mb-5
          %span.navbar-text#step_1= @page_title
        .container
          .row
            .col-12.col-md-9.mx-md-auto
              - if flash[:notice]
                .alert.alert-info= flash[:notice]
              - elsif flash[:error]
                .alert.alert-danger= flash[:error]
              - elsif flash[:success]
                .alert.alert-success= flash[:success]
              .card
                .card-header
                  .card-title= t('.card_1_1_title')
                .card-body
                  .form-inputs
                    = f.input :title
                    .row
                      .col-12.col-md-6
                        = f.association :category
                      .col-12.col-md-6
                        = f.association :official_status
                    .row
                      .col-12.col-md-6
                        = f.input :location
                      .col-12.col-md-6
                        = f.association :employer
                    = f.input :description, input_html: { class: :ckeditor }
                    = f.input :required_profile, input_html: { class: :ckeditor }
                    = f.input :recruitment_process, input_html: { class: :ckeditor }

              .card.mt-5
                .card-header
                  .card-title= t('.card_1_2_title')
                .card-body
                  .form-inputs
                    .row
                      .col-12.col-md-3
                        = f.association :contract_type
                      .col-12.col-md-3
                        = f.input :contract_start_on, as: :string
                      .col-12.col-md-6.pl-md-5
                        = f.input :is_remote_possible, as: :radio_buttons

              .card.mt-5
                .card-header
                  .card-title= t('.card_1_3_title')
                .card-body
                  .form-inputs
                    .row
                      .col-12.col-md-6
                        .row
                          .col-12.col-md-6
                            = f.association :study_level
                          .col-12.col-md-6
                            = f.association :experience_level
                        .row
                          .col-12.col-md-6
                            = f.association :sector
                          .col-12.col-md-6
                            = f.input :is_negotiable, as: :radio_buttons
                      .col-12.col-md-6.pl-md-5
                        .row
                          .col-12
                            = f.input :estimate_monthly_salary_net
                        .row
                          .col-12
                            = f.input :estimate_monthly_salary_gross

        %nav.navbar.navbar-dark.bg-secondary.my-5
          %span.navbar-text#step_2= t('.card_2_title')
        .container
          .row
            .col-12.col-md-9.mx-md-auto
              .card
                .card-header.with-subheader
                  .card-title= t('.card_2_1_title')
                .card-subheader
                  .card-title= t('.card_2_1_1_title')
                .card-body
                  .form-inputs.options
                    - options = %w(cover_letter resume portfolio_url photo)
                    - options.each do |option|
                      - collection = JobOffer::OPTIONS_AVAILABLE.symbolize_keys.keys.reverse
                      = f.input "option_#{option}".to_sym, collection: collection, as: :radio_buttons, wrapper: :horizontal_collection_inline
                .card-subheader
                  .card-title= t('.card_2_1_2_title')
                .card-body
                  .form-inputs.options
                    - options = %w(website_url linkedin_url)
                    - options.each do |option|
                      - collection = JobOffer::OPTIONS_AVAILABLE.symbolize_keys.keys.reverse
                      = f.input "option_#{option}".to_sym, collection: collection, as: :radio_buttons, wrapper: :horizontal_collection_inline

        %nav.navbar.navbar-dark.bg-secondary.my-5
          %span.navbar-text#step_3= t('.card_3_title')
        .container
          .row
            .col-12.col-md-9.mx-md-auto
              .card
                .card-header.with-subheader
                  .card-title= t('.card_3_1_title')

              .form-actions.text-right.my-5
                %ul.list-inline
                  %li.list-inline-item
                    = link_to(t('helpers.submit.job_offer.cancel'), [:admin, :job_offers], class: 'btn btn-link btn-lg')
                  %li.list-inline-item
                    = button_tag(type: 'submit', class: 'btn btn-primary btn-raised btn-lg') do
                      = t('helpers.submit.job_offer.save')
                      = fa_icon('save', class: 'ml-1')
