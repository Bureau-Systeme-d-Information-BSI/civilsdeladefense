- content_for :card_inner do
  .card.mt-3
    .card-body
      = form_with url: [:transfer, :admin, @job_offer] do |f|
        .form-inputs
          .row
            .col-12.col-md-6
              .form-group.fr-input-group
                = f.label :transfer_email, "Email du nouveau propri√©taire de l'offre", class: "form-control-label fr-label"
                = f.email_field :transfer_email, placeholder: 'Email', class: "form-control fr-input string optional"
          .form-actions.text-right.mt-4
            = f.submit t('.submit'), class: 'btn btn-primary btn-raised'
