<%-
url = Rails.application.routes.recognize_path(request.referrer)
%>
var jobOfferNav = document.getElementById('<%= dom_id(@job_offer, 'nav') %>')
if (jobOfferNav != null) {
  var htmlNav = '<%= j render(partial: 'job_offer_nav', locals: { job_offer: @job_offer, active_tab: url }) %>'
  var fragNav = document.createRange().createContextualFragment(htmlNav)
  jobOfferNav.replaceWith(fragNav)
}

var jobOffer = document.getElementById('<%= dom_id(@job_offer) %>')
var html = '<%= j render(partial: 'job_offer', locals: { job_offer: @job_offer }) %>'
var frag = document.createRange().createContextualFragment(html)
jobOffer.replaceWith(frag)
$.snackbar({content: '<%= @notification %>'})
