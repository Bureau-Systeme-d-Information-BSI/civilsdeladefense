- @page_title = t('.title', job_offer_identifier: @job_offer.identifier)
- content_for :card_inner do
  .card.mt-3.stats
    .card-body
      - if @job_offer.published_at.present?
        = render partial: 'stats_job_offer'
        - if @job_applications_count > 0
          = render partial: 'stats_job_applications'
          = render partial: 'stats_job_applications_rejection_reasons'
          = render partial: 'stats_applicants'
      - else
        %em= t('nothing_to_see')
