= simple_form_for([:admin, :settings, @administrator], html: {data: {controller: "administrators--employers"}}) do |f|
  .card
    .card-header.d-flex.align-items-center
      = image_user_tag @administrator.photo, width: 40, class: 'mr-2'
      - unless @administrator.new_record?
        .card-title.ml-1= @administrator.full_name_with_title
    .card-body
      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      .form-inputs
        .row
          .col-12.col-md-6
            = f.input :first_name
          .col-12.col-md-6
            = f.input :last_name
        .row
          .col-12.col-md-6
            = f.input :email
        .row
          .col-12.col-md-6
            - roles = current_administrator.authorized_roles_to_confer
            - roles = roles.map{|x| [Administrator.human_attribute_name("role.#{ x }"), x]}
            = f.input :role, collection: roles, prompt: false, include_blank: :translate, input_html: {data: {administrators__employers_target: "role", action: "administrators--employers#roleChanged"}}
        .row{data: {administrators__employers_target: "employers"}}
          .col-12.col-md-6
            - grouped_options = Employer.roots.map{|x| [x.name, x.children]}
            = f.association :employers, collection: grouped_options, as: :grouped_select, group_method: :last, input_html: {class: 'custom-select', id: :administrator_employer_ids}, required: true
        .row
          .col-12.col-md-6
            = f.input :title

      .form-actions.text-right.mt-4
        %ul.list-inline.mb-0
          %li.list-inline-item
            = link_to(t('helpers.submit.administrator.cancel'), [:admin, :settings, :root], class: 'btn btn-body-color mb-0')
          %li.list-inline-item
            = button_tag(type: 'submit', class: 'btn btn-primary btn-raised mb-0') do
              - if @administrator.new_record?
                = t('buttons.invite')
                = fa_icon('paper-plane', class: 'ml-1')
              - else
                = t('buttons.update')
                = fa_icon('floppy-disk', class: 'ml-1')
