.card
  .card-header
    .card-title= t('.title')
  .card-body
    = simple_form_for(@organization_form_general, url: [:update_general, :admin, :settings, :organization], method: :patch) do |f|
      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      = f.input :name
      = f.input :business_owner_name, as: :text, input_html: { rows: 2 }
      = f.input :business_owner_prefix_article
      = f.input :description
      = f.input :description_short
      = f.input :privacy_policy_url
      = f.input :matomo_site_id
      = f.input :inbound_email_config, collection: Organization.inbound_email_configs.keys.map(&:to_sym), include_blank: false
      = f.input :hours_delay_before_publishing
      =# f.input :subdomain not used ATM
      =# f.input :domain not used ATM
      .form-actions.mt-4
        = button_tag(type: 'submit', class: 'btn btn-primary btn-raised mb-0 ml-auto') do
          = t('buttons.save')
