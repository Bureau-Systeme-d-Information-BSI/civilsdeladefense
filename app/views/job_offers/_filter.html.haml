- filter_name = "#{kind}_id"
- ids = params.dig(:search, filter_name) || []
- cache [collection, ids] do
  %li.fr-sidemenu__item
    - data = {controller: 'fr-accordions-management', action: 'click->fr-accordions-management#collapse'}
    - options = {type: "button", aria: {controls: "fr-accordion-#{kind}", expanded: false}, data: data}
    %button.fr-sidemenu__btn{options}= t(".select_#{kind}")
    .fr-collapse{id: "fr-accordion-#{kind}"}
      %ul.fr-sidemenu__list.fr-my-1w
        = collection_check_boxes(:job_offers, filter_name, collection, :id, :name, include_hidden: false) do |b|
          .fr-checkbox-group
            = b.check_box(checked: false)
            = b.label
