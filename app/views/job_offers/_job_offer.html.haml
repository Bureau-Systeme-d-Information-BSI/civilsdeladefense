- cache [category, job_offer] do
  .rf-pb-2w.rf-pt-2w
    = link_to job_offer do
      .d-flex.align-items-center
        .d-flex.flex-column
          - if category.depth == 2
            %small= category.name
          %strong= job_offer.title
          .d-flex
            .rf-mr-1w
              = [job_offer.contract_type.name, job_offer.duration_contract].join(' ')
            .rf-mr-1w
              \-
            = job_offer.location
          - if job_offer.published_at.present?
            %small.rf-mt-1w= t('.published_date', time_ago_in_words: time_ago_in_words(job_offer.published_at))
        %button.rf-btn.rf-fi-arrow-right-line.ml-auto{title: t('.show')}
          %sr-only=t('.show')
  - unless job_offer_iteration.last?
    %hr.rf-b--g100
