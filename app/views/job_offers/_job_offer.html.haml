- container_class ||= %w[rf-col-12]
%div{class: container_class}
  - cache [job_offer] do
    .rf-py-2w
      - category = job_offer.category
      = link_to job_offer do
        .d-flex.align-items-center
          .d-flex.flex-column
            %small= category.name
            %strong.rf-text--lg.rf-mb-1w= job_offer.title
            .d-flex
              .rf-mr-1w
                = [job_offer.contract_type.name, job_offer.duration_contract].join(' ')
                %br
                = job_offer.location
            - if job_offer.published_at.present?
              %small.rf-mt-1w= t('.published_date', time_ago_in_words: time_ago_in_words(job_offer.published_at))
          %button.rf-btn.rf-fi-arrow-right-line.ml-auto{title: t('.show')}
            %sr-only=t('.show')
  %hr.rf-b--g100.rf-my-0
