- @page_title = "Postuler à l'offre #{@job_offer.identifier} #{@job_offer.title} #{@job_offer.location}"
.rf-container.rf-pb-6w.rf-pt-5w
  .rf-grid-row.rf-grid-row--gutters
    = render partial: 'breadcrumb'
  .rf-grid-row.rf-grid-row--gutters
    .rf-col-xs-12.rf-col-md-5
      .rf-callout.rf-sidemenu--sticky.h-auto.rf-top-3w
        .rf-callout__text
          = render partial: 'job_offer_head', locals: {job_offer: @job_offer, inside_card: true}
    .rf-col-xs-12.rf-col-md-7
      - if user_signed_in? && current_user.already_applied?(@job_offer)
        .text-center
          %strong.h3.d-block.mt-5.mb-3 Vous avez déjà proposé votre candidature à cette annonce.
          = link_to "Retour", :back, class: "btn btn-primary btn-raised btn-lg mb-5"
      - else
        %h1.rf-mt-0
          Postuler à l'offre
          %br
          %small= @job_offer.title
        = render partial: '/job_applications/form'
