- @page_title = 'Offre d\'emploi ' + @job_offer.title + ' ' + @job_offer.location
- encoded_url = url_encode(request.original_url)

.d-flex.justify-space-between.rf-mt-0
  %h1.rf-h2= @job_offer.title
  .d-flex.flex-column
    .social-links.rf-mr-2w
      %a{href: "https://twitter.com/intent/tweet?url=#{encoded_url}", target: "_blank"}
        = fa_icon 'twitter', flavor: 'brands', class: 'rf-ml-1w'
      %a{href: "https://www.linkedin.com/shareArticle?url=#{encoded_url}", target: "_blank"}
        = fa_icon 'linkedin', flavor: 'brands', class: 'rf-ml-1w'
      %a{href:"https://www.facebook.com/sharer/sharer.php?u=#{encoded_url}", target: "_blank"}
        = fa_icon 'facebook', flavor: 'brands', class: ''
    = render partial: 'job_offers/bookmark', locals: {job_offer: @job_offer, user: current_user}
    = link_to job_offer_path(@job_offer.slug, format: :pdf), class: 'rf-link rf-border-0', target: "_blank" do
      .d-flex.flex-row.align-items-center
        %small.max-content= t('.pdf_download')
        = fa_icon('download', class: 'rf-ml-1w')

= render partial: 'job_offer_content', locals: {job_offer: @job_offer}
