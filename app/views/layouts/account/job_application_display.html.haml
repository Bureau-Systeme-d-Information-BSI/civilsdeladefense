- content_for :insider_content do
  .fr-container
    .fr-grid-row
      = render partial: '/account/job_applications/breadcrumb', locals: {job_application: @job_application}
    .fr-grid-row
      %h2.fr-h3.d-flex.flex-column.fr-mt-0.fr-mb-0
        Votre candidature Ã  l'offre :
        %small= @job_offer.title
    .fr-grid-row.fr-mt-3w
      .fr-col-12
        .h5.text-quinary.text-center.mb-4 Suivi de candidature
        = render partial: '/account/job_applications/state_stepper', locals: {job_application: @job_application}
    .fr-grid-row.fr-mt-3w
      .fr-tabs.w-100{data: {controller: 'fr-tab-management'}}
        %ul.fr-tabs__list{role: 'tablist', 'data-fr-tab-management-target' => 'tablist'}
          %li
            - in_use = controller.controller_name == 'job_applications' && controller.action_name  == 'show'
            = link_to [:account, @job_application], class: 'fr-tabs__tab', aria: {controls: 'tabpanel-emails', selected: in_use}, role: 'tab', tabindex: in_use ? 0 : -1, title: t('.nav_emails') do
              = t('.nav_emails')
            - if in_use
              #tabpanel-emails.fr-tabs__panel{role: :tabpanel, 'data-fr-tab-management-target' => 'panel', tabindex: in_use ? 0 : -1, class: in_use ? 'fr-tabs__panel--selected' : nil}
                = yield
          %li
            - in_use = controller.controller_name == 'job_application_files' && controller.action_name  == 'index'
            = link_to [:account, @job_application, :job_application_files], class: 'fr-tabs__tab', aria: {controls: 'tabpanel-documents', selected: in_use}, role: 'tab', tabindex: in_use ? 0 : -1, title: t('.nav_files', count: 0) do
              = t('.nav_files', count: 0)
            - if in_use
              #tabpanel-documents.fr-tabs__panel{role: :tabpanel, 'data-fr-tab-management-target' => 'panel', tabindex: in_use ? 0 : -1, class: in_use ? 'fr-tabs__panel--selected' : nil}
                = yield
          %li
            - in_use = controller.controller_name == 'job_applications' && controller.action_name  == 'job_offer'
            = link_to [:job_offer, :account, @job_application], class: 'fr-tabs__tab', aria: {controls: 'tabpanel-job-offer', selected: in_use}, role: 'tab', tabindex: in_use ? 0 : -1, title: t('.nav_offer') do
              = t('.nav_offer')
            - if in_use
              #tabpanel-job-offer.fr-tabs__panel{role: :tabpanel, 'data-fr-tab-management-target' => 'panel', tabindex: in_use ? 0 : -1, class: in_use ? 'fr-tabs__panel--selected' : nil}
                = yield
= render template: "layouts/account"
