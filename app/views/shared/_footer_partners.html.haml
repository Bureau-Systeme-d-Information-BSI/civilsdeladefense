- if current_organization.partner_1_logo.present? || current_organization.partner_2_logo.present? || current_organization.partner_3_logo.present?
  .fr-footer__partners
    -# %h4.fr-footer__partners-title Nos partenaires
    .fr-footer__partners-logos
      .fr-footer__partners-main.fr-mt-0
        - if current_organization.partner_1_logo.present?
          = link_to current_organization.partner_1_url, class: 'footer__partners-link' do
            = image_tag(current_organization.partner_1_logo.url, alt: current_organization.partner_1_name, class: 'fr-footer__logo', style: 'width:auto; height:5rem;')
      .fr-footer__partners-sub.fr-mt-0
        - if current_organization.partner_2_logo.present?
          = link_to current_organization.partner_2_url, class: 'footer__partners-link' do
            = image_tag(current_organization.partner_2_logo.url, alt: current_organization.partner_2_name, class: 'fr-footer__logo', style: 'width:auto; height:5rem;')
        - if current_organization.partner_3_logo.present?
          = link_to current_organization.partner_3_url, class: 'footer__partners-link' do
            = image_tag(current_organization.partner_3_logo.url, alt: current_organization.partner_3_name, class: 'fr-footer__logo', style: 'width:auto; height:5rem;')
