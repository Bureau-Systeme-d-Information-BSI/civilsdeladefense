    "nodemon": "^3.1.0",
    "popper.js": "^1.16.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sass": "^1.72.0",
    "smoothscroll-polyfill": "^0.4.3",
    "snackbarjs": "^1.1.0",
